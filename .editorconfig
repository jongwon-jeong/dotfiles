root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 2
max_line_length = 100

[*.{sh,zsh,bash}]
indent_size = 2

[*.{c,h}]
[*.{cc,cpp,cxx,hpp,hxx}]
indent_size = 2
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4

[*.py]
indent_size = 4
max_line_length = 80

[*.{java,groovy,gradle}]
[*.{kt,kts,gradle.kts}]
indent_size = 4
max_line_length = 100

[*.{html,css,js}]
[*.{json,yml,yaml,toml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 0
